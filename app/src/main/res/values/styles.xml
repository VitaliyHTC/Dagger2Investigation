<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="product_key">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/detail_activity_key_text_color</item>
        <item name="android:textSize">@dimen/detail_activity_key_text_size</item>
    </style>

    <style name="product_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textColor">@color/detail_activity_value_text_color</item>
        <item name="android:textSize">@dimen/detail_activity_value_text_size</item>
    </style>

</resources>
